<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowEnterTransition">@anim/fade_out</item>
    </style>
    <style name="DialogTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_16sp</item>

    </style>
    <style name="DialogCancel" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">@dimen/size_24dp</item>
        <item name="android:paddingRight">@dimen/size_24dp</item>
        <item name="android:paddingTop">@dimen/size_12dp</item>
        <item name="android:paddingBottom">@dimen/size_12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/txt_cancel</item>
           <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="ContactSave" parent="TextAppearance.AppCompat">

        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_save</item>
        <item name="android:paddingLeft">@dimen/size_24dp</item>
        <item name="android:paddingRight">@dimen/size_24dp</item>
        <item name="android:paddingTop">@dimen/size_12dp</item>
        <item name="android:paddingBottom">@dimen/size_12dp</item>
        <item name="android:text">Save</item>
    </style>
</resources>
